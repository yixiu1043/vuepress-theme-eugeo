
.v-ripple {
  .v-ripple__container {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
    overflow: hidden;
    width: 100%;
    height: 100%;
    border-radius: inherit;
    color: inherit;
    pointer-events: none;
    contain: strict;
  }

  .v-ripple__inner {
    position: absolute;
    overflow: hidden;
    border-radius: 50%;
    background: currentColor;
    color: inherit;
    animation: ripple 250ms cubic-bezier(0.4, 0, 0.2, 1) forwards;
    pointer-events: none;
    will-change: transform, opacity;
  }
}

.ripple {
  position: relative;
  overflow: hidden;
  transform: translate3d(0, 0, 0);

  &:after {
    position: absolute;
    top: 0;
    left: 0;
    display: block;
    width: 100%;
    height: 100%;
    background-image: radial-gradient(circle, currentColor 10%, transparent 10.01%);
    background-position: 50%;
    background-repeat: no-repeat;
    content: '';
    opacity: 0;
    transition: transform 0.5s, opacity 1s;
    transform: scale(10, 10);
    pointer-events: none;
  }

  &:active:after {
    opacity: 0.2;
    transition: 0s;
    transform: scale(0, 0);
  }
}

.animationBackground {
  /* background: linear-gradient(-45deg, #7bd0c1cc, #ae85cacc, #7ecaf6cc, #f2849ecc, #c75b9bcc); */
  background: linear-gradient(-45deg, #EE7752, #E73C7E, #23A6D5, #23D5AB);
  background-size: 400% 400%;
  animation: Gradient 10s ease infinite;
}

@keyframes Gradient {
  0% {
    background-position: 0% 50%;
  }

  50% {
    background-position: 100% 50%;
  }

  100% {
    background-position: 0% 50%;
  }
}

@keyframes ripple {
  0% {
    opacity: 0;
    transform: scale3d(0.1, 0.1, 0.1);
  }

  30% {
    opacity: 0.25;
    transform: scale3d(0.5, 0.5, 0.5);
  }

  100% {
    opacity: 0.25;
    transform: scale3d(1, 1, 1);
  }
}

@keyframes zoomIn {
  from {
    opacity: 0;
    transform: scale3d(0.1, 0.1, 0.1);
  }

  100% {
    opacity: 1;
  }
}

@keyframes fade {
  from {
    opacity: 0;
    transform: translate3d(0, 30px, 0);
  }

  to {
    opacity: 1;
    transform: translate3d(0, 0, 0);
  }
}

@keyframes heartBeat {
  0% {
    transform: scale(1);
  }

  14% {
    transform: scale(1.2);
  }

  28% {
    transform: scale(1);
  }

  42% {
    transform: scale(1.2);
  }

  70% {
    transform: scale(1);
  }
}
